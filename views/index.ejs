<!DOCTYPE html>
<html data-ng-app="humanLibrary">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>ŻYWA BIBLIOTEKA</title>
        <meta name="description" content="Żywa biblioteka" />

        <link rel="stylesheet" type="text/css" href="stylesheets/humanLibrary.css" />
        <link rel="stylesheet" type="text/css" href="vendor/bower_components/bootstrap/dist/css/bootstrap.css" />
    </head>

    <body data-ng-controller="LibraryCtrl">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <a class="navbar-brand" href="/">Żywa biblioteka</a>
            <button class="btn btn-primary navbar-btn" data-ng-click="library.addBook()"><i class="glyphicon glyphicon-plus"></i> Dodaj książkę</button>
        </nav>

        <div class="books-container">
            <div class="panel panel-default panel-book" data-ng-repeat="book in library.books" data-ng-class="{'panel-success': !book.currentRental, 'panel-danger': progress.status == 'danger', 'panel-warning': progress.status == 'warning' }"  data-hl-book-progress>
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-9 book-name">
                            <p>
                                <input class="form-control input-md" type="text" placeholder="Wpisz tytuł książki..." data-ng-model="book.name" />
                                <span class="badge">{{book.rentals.length}}</span>
                            </p>
                        </div>
                        <div class="col-lg-3 text-right">
                            <button class="btn btn-default btn-md" data-ng-click="library.deleteBook(book)">
                                <span class="glyphicon glyphicon-trash"></span>
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <input class="form-control input-sm book-notes" type="text" placeholder="Notatki..." data-ng-model="book.notes" />
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-9">
                            <div class="progress">
                                <div class="progress-bar" data-ng-class="{'progress-bar-warning': progress.status == 'warning', 'progress-bar-danger': progress.status == 'danger'}" role="progress" aria-valuenow="{{progress.percent}}" aria-valuemin="0" aria-valuemax="100" data-ng-style="{width: progress.percent+'%'}"></div>
                            </div>
                        </div>
                        <div class="col-lg-3 text-right">
                            <span class="text-muted" data-ng-class="{'text-primary': book.currentRental, 'text-warning': progress.status == 'warning', 'text-danger': progress.status == 'danger' }">{{progress.timer|timer}}</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <button class="btn btn-default btn-sm" data-ng-click="book.return()">Zwróć</button>
                            <div class="btn-group btn-group-sm pull-right">
                                <button class="btn btn-default" data-ng-click="book.rent()">Wypożycz</button>
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href data-ng-click="book.cancelLastReturn()">Kontynuuj ostatnie</a></li>
                                    <li><a href data-ng-click="book.cancelLastRental()">Anuluj aktualne</a></li>
                                </ul>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>

