                                <li>
                                    <button class="btn btn-default btn-sm" ng-click="library.deleteBook(book)">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </button>
                                </li>
                            </ul>
                        </div>
                        <div class="panel-body">
                            Taki i taki
                        </div>
                    </div>
                </div>
            </div>
        </div>

